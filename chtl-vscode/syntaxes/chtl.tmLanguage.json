{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CHTL",
  "scopeName": "source.chtl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#tags"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.chtl",
          "match": "//.*"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "entity.name.tag.chtl",
          "match": "\\b([a-zA-Z0-9_:-]+)"
        }
      ]
    }
  }
}