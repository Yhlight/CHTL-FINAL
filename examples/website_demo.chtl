// 实用网站示例 - 展示 CHTL 的实际应用

html {
    head {
        title: "CHTL 示例网站";
        charset: "UTF-8";
    }
    
    body {
        div {
            class: "navbar";
            
            div {
                class: "logo";
                text: "CHTL";
            }
            
            div {
                class: "nav-links";
                
                span {
                    text: "首页";
                }
                
                span {
                    text: "文档";
                }
                
                span {
                    text: "示例";
                }
                
                span {
                    text: "关于";
                }
            }
        }
        
        div {
            class: "hero";
            
            div {
                class: "hero-content";
                
                div {
                    class: "hero-title";
                    text {
                        "CHTL - 现代化的超文本语言"
                    }
                }
                
                div {
                    class: "hero-subtitle";
                    text {
                        "更简洁、更直观、更强大"
                    }
                }
                
                div {
                    class: "hero-buttons";
                    
                    button {
                        class: "btn-primary";
                        text: "开始使用";
                    }
                    
                    button {
                        class: "btn-secondary";
                        text: "查看文档";
                    }
                }
            }
        }
        
        div {
            class: "features-section";
            
            div {
                class: "section-title";
                text {
                    "核心特性"
                }
            }
            
            div {
                class: "features-grid";
                
                div {
                    class: "feature";
                    
                    div {
                        class: "feature-icon";
                        text: "⚡";
                    }
                    
                    div {
                        class: "feature-name";
                        text: "高性能";
                    }
                    
                    div {
                        class: "feature-description";
                        text: "基于 C++20 实现，编译速度快";
                    }
                }
                
                div {
                    class: "feature";
                    
                    div {
                        class: "feature-icon";
                        text: "🎨";
                    }
                    
                    div {
                        class: "feature-name";
                        text: "简洁语法";
                    }
                    
                    div {
                        class: "feature-description";
                        text: "类 CSS 的声明式语法，易于学习";
                    }
                }
                
                div {
                    class: "feature";
                    
                    div {
                        class: "feature-icon";
                        text: "🧪";
                    }
                    
                    div {
                        class: "feature-name";
                        text: "测试驱动";
                    }
                    
                    div {
                        class: "feature-description";
                        text: "TDD 开发，100% 测试覆盖";
                    }
                }
            }
        }
        
        div {
            class: "footer";
            
            div {
                class: "footer-content";
                
                div {
                    text: "MIT License";
                }
                
                div {
                    text: "版本: v0.1.0-alpha";
                }
                
                div {
                    text: "© 2025 CHTL Project";
                }
            }
        }
    }
}
