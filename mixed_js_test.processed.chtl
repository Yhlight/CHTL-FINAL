div {
    script {
        // This is a regular JavaScript comment.
        console.log("This is regular JavaScript.");

        // CHTL JS block
[CHTLJS]
        {{.my-button}}->Listen {
            click: () => {
                console.log('Button clicked!');
            }
        };
[CHTLJSEND]

        // Another regular JavaScript statement
        let x = 10;
        console.log("x = " + x);

        // Another CHTL JS block
[CHTLJS]
        const anim = Animate {
            target: {{.my-div}},
            duration: 1000,
            begin: {
                opacity: 0,
            },
            end: {
                opacity: 1,
            }
        };
[CHTLJSEND]

        // New test cases for additional CHTL JS keywords
[CHTLJS]
        {{.another-button}} &-> click: () => {
            console.log('Another button clicked!');
        };
[CHTLJSEND]

[CHTLJS]
        Router {
            url: "/home",
            page: {{.home-page}},
        };
[CHTLJSEND]

[CHTLJS]
        util a > b -> change {
            console.log("a is now greater than b");
        } -> end {
            console.log("a > b condition finished");
        };
[CHTLJSEND]
    }
}
